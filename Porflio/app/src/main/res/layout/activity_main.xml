<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/darkgreen"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="1.0"
        >

        <Button
            android:id="@+id/btn_app1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="0.2"
            android:background="@color/abc_search_url_text_normal"
            android:text="@string/app_1_name" />

        <Button
            android:id="@+id/btn_app2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="0.2"
            android:background="@color/abc_search_url_text_normal"
            android:text="@string/app_2_name" />
        <Button
            android:id="@+id/btn_app3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="0.2"
            android:background="@color/abc_search_url_text_normal"
            android:text="@string/app_3_name" />
        <Button
            android:id="@+id/btn_app4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:layout_weight="0.2"
            android:background="@color/abc_search_url_text_normal"
            android:text="@string/app_4_name" />
        <Button
            android:id="@+id/btn_app5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/abc_search_url_text_normal"

            android:text="@string/app_5_name" />



    </LinearLayout>



</RelativeLayout>
